@model IEnumerable<EquipamentoModel>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Cadastro Equipamentos</h1>
        <a class="btn btn-success ms-2" asp-controller="Aluguel" asp-action="Cadastrar" ><i class="bi bi-file-earmark-plus-fill mx-2"></i>Cadastrar novo Equipamento </a>
    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success text-dark" role="alert">
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemError"] != null)
    {
        <div class="alert alert-danger text-dark" role="alert">
            @TempData["MensagemError"]
        </div>
    }

    <table id="Aluguel"class="table table-light table-hover mt-3">
        <thead>
            <tr>
                <th scope="col">Cliente</th>
                <th scope="col">CNPJ</th>
                <th scope="col">Equipamento Alugado</th>
                <th scope="col">Data Inicial</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var emprestimo in Model)
                {
                    <tr>
                        <th scope="row">@emprestimo.Cliente</th>
                        <td>@emprestimo.CNPJ</td>
                        <td>@emprestimo.EquipamentoAlugado</td>
                        <td>@emprestimo.DateInicial</td>
                        <td>
                            <a asp-controller="Aluguel" asp-action="editar" asp-route-id="@emprestimo.Id" class="btn btn-warning me-2"><i class="bi bi-pencil-square mx-2"></i>Editar</a>
                            <a asp-controller="Aluguel" asp-action="excluir" asp-route-id="@emprestimo.Id" class="btn btn-danger"><i class="bi bi-trash3-fill mx-2"></i>Excluir</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
