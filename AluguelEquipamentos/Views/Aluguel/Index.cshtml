@model IEnumerable<EquipamentoModel>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5"> 
        <h1>Aluguel</h1>
        <a class="btn btn-success mx-4" asp-controller="Aluguel" asp-action="Cadastrar">Cadastar novo Aluguel</a>
    </div>

<table class="table table-striped-columns table-hover">
    <thead>
        <tr>
            <th scope="col">Cliente</th>
            <th scope="col">CNPJ</th>
            <th scope="col">EquipamentoAlugado</th>
            <th scope="col">Data Inicial aluguel</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var emprestimo in Model)
            {
                <tr>
                    <th scope="row">@emprestimo.Cliente</th>
                    <td>@emprestimo.CNPJ</td>
                    <td>@emprestimo.EquipamentoAlugado</td>
                    <td>@emprestimo.DateInicial</td>
                    <td>
                        <a asp-controller="Aluguel" asp-action="editar" asp-route-id ="@emprestimo.Id" class="btn btn-warning mx-2">Editar</a>
                        <a asp-controller="Aluguel" asp-action="excluir" asp-route-id="@emprestimo.Id"class="btn btn-danger mx-2">Excluir</a>
                    </td>
                </tr>

            }
        }

    </tbody>
</table>
</div>