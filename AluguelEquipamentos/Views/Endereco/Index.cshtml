@using AluguelEquipamentos.Negocio.Models
@model IEnumerable<EnderecoModel>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Cadastro Endereço</h1>
        <a class="btn btn-success ms-2" asp-controller="Endereco" asp-action="Cadastrar"><i class="bi bi-file-earmark-plus-fill mx-2"></i>Cadastrar endereço Equipamento</a>
    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success text-dark" role="alert">
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemError"] != null)
    {
        <div class="alert alert-danger text-dark" role="alert">
            @TempData["MensagemError"]
        </div>
    }

    <table id="Endereco" class="table table-light table-hover mt-3">
        <thead>
            <tr>
                <th scope="col">CEP</th>
                <th scope="col">Rua</th>
                <th scope="col">Bairro</th>
                <th scope="col">Cidade</th>
                <th scope="col">Estado</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var endereco in Model)
                {
                    <tr>
                        <td>@endereco.cep</td>
                        <td>@endereco.street</td>
                        <td>@endereco.neighborhood</td>
                        <td>@endereco.city</td>
                        <td>@endereco.state</td>
                        <td>
                            <a asp-controller="Endereco" asp-action="editar" asp-route-id="@endereco.IdEndereco" class="btn btn-warning me-2"><i class="bi bi-pencil-square mx-2"></i>Editar</a>
                            <a asp-controller="Endereco" asp-action="excluir" asp-route-id="@endereco.IdEndereco" class="btn btn-danger"><i class="bi bi-trash3-fill mx-2"></i>Excluir</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
